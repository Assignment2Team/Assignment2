import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    
	    Scanner z= new Scanner(System.in);
	    
	    int account=1;
	    int total=0;
	    int total2=0;
	    int total3=0;
	    int choice;
	    int desposit;
	    int withdraw;
		
		System.out.println("Press 1 to desposit");
        System.out.println("Press 2 to withdraw");
        System.out.println("Press 3 to transfer money to another account");
        System.out.println("Press 4 to print balance");
        System.out.println("Press 5 to switch account");
        System.out.println("Press 6 to exit");
        
        choice=z.nextInt();
        
        do{
            switch(choice){
                case 1:
                    
                    if(account==1){
                        
                        System.out.println("Enter amount to desposit");
                        desposit=z.nextInt();
                        total=desposit+total;
                        System.out.println("Money in bank: "+total);
                        System.out.println("1 desposit, 2 withdraw, 3 transfer, 4 to print balance, 5 switch accounts, 6 to exit");
                        choice=z.nextInt();
                    }
                    if(account==2){
                        System.out.println("Enter amount to desposit");
                        desposit=z.nextInt();
                        total2=desposit+total2;
                        System.out.println("Money in bank: "+total2);
                        System.out.println("1 desposit, 2 withdraw, 3 transfer, 4 to print balance, 5 switch accounts, 6 to exit");
                        choice=z.nextInt();
                    }
                    if(account==3){
                        System.out.println("Enter amount to desposit");
                        desposit=z.nextInt();
                        total3=desposit+total3;
                        System.out.println("Money in bank: "+total3);
                        System.out.println("1 desposit, 2 withdraw, 3 transfer, 4 to print balance, 5 switch accounts, 6 to exit");
                        choice=z.nextInt();
                    }
                    desposit=0;
                    break;
                    
                case 2:
                    
                case 3:
                    
                case 4:
                    if(account==1){
                        System.out.println("Money: "+ total);
                        System.out.println("1 desposit, 2 withdraw, 3 transfer, 4 to print balance, 5 switch accounts, 6 to exit");
                        choice=z.nextInt();
                    }
                    if(account==2){
                        System.out.println("Money: "+ total2);
                        System.out.println("1 desposit, 2 withdraw, 3 transfer, 4 to print balance, 5 switch accounts, 6 to exit");
                        choice=z.nextInt();
                    }
                    if(account==3){
                        System.out.println("Money: "+ total3);
                        System.out.println("1 desposit, 2 withdraw, 3 transfer, 4 to print balance, 5 switch accounts, 6 to exit");
                        choice=z.nextInt();
                    }
                    break;
                case 5:
                    System.out.println("Enter integer 1-3 to change account");
                    account=z.nextInt();
                    System.out.println("1 desposit, 2 withdraw, 3 transfer, 4 to print balance, 5 switch accounts, 6 to exit");
                    choice=z.nextInt();
                    break;
                
                case 6:
                    System.exit(0);
                    break;
                   
                
                
            }
        }
		while(true);
	}
}
