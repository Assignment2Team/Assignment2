import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    
	    Scanner z= new Scanner(System.in);
	    
	    int account=1;
	    int total=0;
	    int total2=0;
	    int total3=0;
	    int choice;
	    int desposit;
	    int withdraw;
	    int accounttotransfer;
	    int transfer;
	    String options= "1 desposit, 2 transfer, 3 withdraw, 4 to print balance, 5 switch accounts, 6 to exit";
		
		System.out.println(options);

        choice=z.nextInt();
        
        do{
            switch(choice){
                case 1:
                    
                    if(account==1){
                        
                        System.out.println("Enter amount to desposit");
                        desposit=z.nextInt();
                        total=desposit+total;
                        System.out.println("Money in bank: "+total);
                        System.out.println(options);
                        choice=z.nextInt();
                    }
                    if(account==2){
                        System.out.println("Enter amount to desposit");
                        desposit=z.nextInt();
                        total2=desposit+total2;
                        System.out.println("Money in bank: "+total2);
                        System.out.println(options);
                        choice=z.nextInt();
                    }
                    if(account==3){
                        System.out.println("Enter amount to desposit");
                        desposit=z.nextInt();
                        total3=desposit+total3;
                        System.out.println("Money in bank: "+total3);
                        System.out.println(options);
                        choice=z.nextInt();
                    }
                    desposit=0;
                    break;
                    
                case 2:
                    System.out.println("Which account would you like to transfer too");
                    accounttotransfer=z.nextInt();
                    System.out.println("How much would you like to transfer");
                    transfer=z.nextInt();
                    if(account==1 && accounttotransfer==2 && transfer<=total){
                        total=total-transfer;
                        total2=total2+transfer;
                    }
                    if(account==1 && accounttotransfer==3 && transfer<=total){
                        total=total-transfer;
                        total3=total3+transfer;
                    }
                    if(account==2 && accounttotransfer==1 && transfer<=total2){
                        total2=total2-transfer;
                        total=total+transfer;
                    }
                    if(account==2 && accounttotransfer==3 && transfer<=total2){
                        total2=total2-transfer;
                        total3=total3+transfer;
                    }
                    if(account==3 && accounttotransfer==1 && transfer<=total3){
                        total3=total3-transfer;
                        total=total+transfer;
                    }
                    if(account==3 && accounttotransfer==2 && transfer<=total3){
                        total3=total3-transfer;
                        total2=total2+transfer;
                    }
                    
                case 3:
                    
                    
                    
                case 4:
                    if(account==1){
                        System.out.println("Money: "+ total);
                        System.out.println(options);
                        choice=z.nextInt();
                    }
                    if(account==2){
                        System.out.println("Money: "+ total2);
                        System.out.println(options);
                        choice=z.nextInt();
                    }
                    if(account==3){
                        System.out.println("Money: "+ total3);
                        System.out.println(options);
                        choice=z.nextInt();
                    }
                    break;
                case 5:
                    System.out.println("Enter integer 1-3 to change account");
                    account=z.nextInt();
                    System.out.println(options);
                    choice=z.nextInt();
                    break;
                
                case 6:
                    System.exit(0);
                    break;
                   
            }
        }
		while(true);
	}
}
