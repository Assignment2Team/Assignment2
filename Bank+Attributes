import java.util.*;
import java.text.DecimalFormat;
public class Main
{
	public static void main(String[] args) {
	    
	    Scanner z= new Scanner(System.in);
	    
	    
	    Account uzair = new Account("Ahmed", 10.00);
	    Account Dharmin = new Account("Dharmin",0.00);
	    Account Arshjit = new Account("Arshjit",-10.00);
	    
	    DecimalFormat df = new DecimalFormat("#.##");
	    
	    System.out.println(uzair.toString());
	    System.out.println(uzair.equals(Arshjit));
	    
	    int inaccount;
	    int account=-1;
	    double total=0;
	    double total2=0;
	    double total3=0;
	    int choice=1;
	    double deposit;
	    double withdraw;
	    int accounttotransfer;
	    double transfer;
	    String inpassword="";
	    String formatted="";

        do{
            switch(choice){
	    	
	    	 case 1:
	    	        account=-1;
                    while(account>3 || account<0){
                        System.out.println("Enter the password");
                        inpassword=z.nextLine();
                        if(inpassword.equals(uzair.getPassWord())){
                            account=1;
                        }
                        if(inpassword.equals(Dharmin.getPassWord())){
                            account=2;
                        }
                        if(inpassword.equals(Arshjit.getPassWord())){
                            account=3;
                        }
                    }
                    System.out.println(Arshjit);
                    choice=z.nextInt();
                    break;
                
                case 2:
                    
                    if(account==1){
                        
                        System.out.println("Enter amount to deposit");
                        deposit=z.nextDouble();
                        uzair.setMoney((deposit + uzair.getMoney()));
                        total = uzair.getMoney();
                        System.out.println("Money in bank " +total);
                    }
                    if(account==2){
                        System.out.println("Enter amount to deposit");
                        deposit=z.nextDouble();
                        Dharmin.setMoney((deposit + Dharmin.getMoney()));
                        total2 = Dharmin.getMoney();
                        System.out.println("Money in bank " +total2);
                    }
                    if(account==3){
                        System.out.println("Enter amount to deposit");
                        deposit=z.nextDouble();
                        Arshjit.setMoney((deposit + Arshjit.getMoney()));
                        total2 = Arshjit.getMoney();
                        System.out.println("Money in bank " +total3);
                    }
                    System.out.println(Arshjit);
                    choice=z.nextInt();
                    deposit=0;
                    break;
                    
                case 3:
                    System.out.println("Which account would you like to transfer too");
                    accounttotransfer=z.nextInt();
                    System.out.println("How much would you like to transfer");
                    transfer=z.nextDouble();
                    if(account==1 && accounttotransfer==2 && uzair.getMoney()>=transfer && transfer>=0){
                        uzair.setMoney((uzair.getMoney()-transfer));
                        Dharmin.setMoney((Dharmin.getMoney()+transfer));
                    }
                    if(account==1 && accounttotransfer==3 && uzair.getMoney()>=transfer && transfer>0){
                        uzair.setMoney((uzair.getMoney()-transfer));
                        Arshjit.setMoney((Arshjit.getMoney()+transfer));
                    }
                    if(account==2 && accounttotransfer==1 && Dharmin.getMoney()>=transfer && transfer>0){
                        Dharmin.setMoney((Dharmin.getMoney()-transfer));
